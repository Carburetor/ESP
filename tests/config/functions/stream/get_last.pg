CREATE OR REPLACE FUNCTION
  "test stream_get_last is last message written in stream"()
RETURNS SETOF TEXT
AS $$
DECLARE
  last_data jsonb[];
BEGIN
  PERFORM stream_write_message(
    gen_random_uuid(),
    'account-123'::varchar,
    ''::varchar,
    '234'::jsonb
  );
  last_data = ARRAY(
    SELECT "data" FROM stream_get_last('account-123')
  );

  return query SELECT ok(
    last_data = ARRAY['234'::jsonb]::jsonb[]
  );
END;
$$ LANGUAGE plpgsql;

CREATE OR REPLACE FUNCTION
  "test stream_get_last is last message written in category"()
RETURNS SETOF TEXT
AS $$
DECLARE
  last_data jsonb[];
BEGIN
  PERFORM stream_write_message(
    gen_random_uuid(),
    'account-123'::varchar,
    ''::varchar,
    '234'::jsonb
